<div class="homepage">
   <div class="artday">
      <%= image_tag ark.image_url %>
    </div>
    <br>
   <div class="descrip">
      <h2><%= ark.name %></h2>
    <div class="artist_name">
        <h5><%= ark.artist.name %></h5>
    </div>
       <% ark.description_paragraphs.each do |paragraph| %>
          <p><%= paragraph.join %></p>
       <% end %>
   </div>

    <div class="icons">
       <%= link_to alternative_ark_ark_path(ark), class: "dislike" do %>
        <span><i class="fas fa-heart-crack"></i></span>
      <% end %>

        <%= link_to related_arks_ark_path(ark),ndata: {turbo_method: :post}, class: "heart" do %>
        <span><i class="fas fa-heart"></i></span>
        <% end %>

         <%= link_to ark_favorites_path(ark), data: {turbo_method: :post}, class: "addto" do %>
        <span><i class="fas fa-folder-plus"></i></span>
        <% end %>
    </div>

  </div>
