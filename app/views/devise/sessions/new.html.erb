<div class= "login-container">
  <div class="log">
    <div class="logo-smart-login1">
      <%= image_tag("logo.svg") %>
    </div>

    <h2>Je me connecte</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo:false}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" }, class: "emailinput" %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" }, class: "passwordinput" %>
        <%# <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <div class="loginbtn">
      <%= f.button :submit, "Connexion" %>
        </div>
      </div>
    <% end %>
     <div class="liens-log">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
