<div class="showuser">
  <h1>Mon profil</h1>
  <%= simple_form_for(@user) do |f| %>
    <%= f.input :avatar, as: :file %>
    <%= f.submit %>
  <% end %>

  <h3>Image du jour</h3>
  <%= link_to "Image du jour", root_path %>

  <h3>Preferences</h3>
  <%= link_to "Mes preferences", choose_preferences_path %>

  <h3>Mon portfolio</h3>
  <%= link_to "Mon portfolio", favorites_path %>

  <h3>Editer mon profil</h3>
  <%= link_to "Editer", edit_user_registration_path %>

  <h3>Me deconnecter</h3>
  <%=link_to "Deconnexion", destroy_user_session_path, method: :delete  %>
</div>
